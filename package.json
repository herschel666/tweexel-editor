{
  "name": "tweexel-editor",
  "description": "Editor for emoji-based pixel art on twitter.",
  "version": "0.1.0-alpha.01",
  "main": "index.html",
  "keywords": [],
  "author": "Emanuel Kluge <kraemerseele@gmx.de>",
  "license": "MIT",
  "scripts": {
    "start": "preact watch",
    "build": "preact build",
    "postbuild": "cp build/404/index.html build/404.html",
    "fmt": "prettier --config ./.prettierrc --ignore-path ./.prettierignore \"**/**.{js,jsx,ts,tsx,css,html,json,md}\"",
    "fmt:write": "npm run fmt -- --write",
    "fmt:check": "npm run fmt -- --check",
    "lint:check": "eslint src/**/*.{js,ts,tsx}",
    "lint:fix": "npm run lint -- --fix",
    "tsc": "tsc --noEmit",
    "lint": "npm-run-all lint:check tsc fmt:check",
    "test": "jest",
    "preserve": "npm run build",
    "serve": "serve -s -C -n build",
    "precommit": "lint-staged",
    "deploy": "npm-run-all lint test build"
  },
  "lint-staged": {
    "*.{css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "classnames": "2.2.6",
    "clipboard-polyfill": "2.8.6",
    "preact": "10.5.9",
    "preact-async-route": "2.2.1",
    "preact-render-to-string": "5.1.12",
    "preact-router": "3.2.1",
    "tailwindcss": "2.0.2"
  },
  "devDependencies": {
    "@testing-library/preact": "1.0.2",
    "@types/classnames": "2.2.11",
    "@types/jest": "25.2.3",
    "@types/webpack-env": "1.16.0",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "husky": "4.3.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "preact-cli": "3.0.5",
    "prettier": "2.2.1",
    "serve": "11.3.2",
    "ts-jest": "26.4.4",
    "ts-loader": "7.0.5",
    "typescript": "3.9.5"
  }
}
